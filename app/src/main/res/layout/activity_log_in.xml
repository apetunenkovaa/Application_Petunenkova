<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <TextView
        android:id="@+id/txtLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="Log In"
        android:textColor="@color/pink_normal"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Et_Phone_Email"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="100dp"
        android:text="Enter Phone"
        android:textColor="@color/pink_light"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:background="@drawable/b_text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLog"/>

    <EditText
        android:id="@+id/edPasswordLog"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="@color/pink_light"
        android:textSize="14sp"
        android:background="@drawable/b_text"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Et_Phone_Email"/>

    <TextView
        android:id="@+id/txtForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/pink_bright"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="@string/ForgetPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edPasswordLog" />

    <CheckBox
        android:id="@+id/chkBox"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="26dp"
        android:button="@drawable/cb"
        android:padding="10dp"
        android:text="@string/Remember"
        android:textColor="@color/pink_light"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtForget" />

    <android.widget.Button
        android:id="@+id/btnLog"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="47dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:text="Login"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/pink_bright"
        android:background="@drawable/color_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkBox" />

    <TextView
        android:id="@+id/txtOR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="14sp"
        android:textColor="@color/pink_bright"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLog" />

    <android.widget.Button
        android:id="@+id/btnGOOGLE"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/color_btn"
        android:text="GOOGLE"
        android:textSize="14sp"
        android:textColor="@color/pink_bright"
        app:layout_constraintTop_toBottomOf="@+id/txtOR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnFACEBOOK" />

    <android.widget.Button
        android:id="@+id/btnFACEBOOK"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/color_btn"
        android:text="FACEBOOK"
        android:textColor="@color/pink_bright"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGOOGLE"
        app:layout_constraintTop_toBottomOf="@+id/txtOR" />

    <TextView
        android:id="@+id/txtReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:text="@string/HaveAccount"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnGOOGLE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFACEBOOK" />

</android.support.constraint.ConstraintLayout>